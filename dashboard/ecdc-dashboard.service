[Unit]
Description=Dashboard for ECDC server monitoring
After=network.target

[Service]
User=efudashboard
WorkingDirectory=/ess/ecdc/dashboard/data
ExecStart=/usr/bin/scl enable rh-python38 "$DASHBOARD_HOME/start_dashboard -c $DASHBOARD_CONFIG"
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
